<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 col-md-7 col-sm-8 mx-auto order-0">
            <h1>Edit <%= campground.name %></h1>
            
            <form  action="/campgrounds/<%= campground._id %>?_method=put" method="post">
                <div class="form-group">
                    <input class="form-control" type="text"  name="name" value="<%= campground.name %>">
                </div>

                <div class="form-group">
                    <input class="form-control" type="number"  name="price" value="<%= campground.price %>" min="0.00" step="0.10">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text"  name="image" value="<%= campground.image %>">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text"  name="description" value="<%= campground.description %>">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Update campground</button>
                </div>
                
                
            </form>
            
            <a href="/campgrounds">Go back view all the campgrounds</a>
        </div>
    </div>    
</div>
<% include ../partials/footer %>