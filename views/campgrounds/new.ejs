<% include ../partials/header %>

<div class="container">
    <div class="row">
        <div class="col-lg-6 col-md-7 col-sm-8 mx-auto order-0">
            <h1>Create a new campground</h1>
            
            <form  action="/campgrounds" method="post">
                <div class="form-group">
                    <input class="form-control" type="text"  name="name" placeholder="Enter the name of the campground">
                </div>

                <div class="form-group">
                    <input class="form-control" type="number"  name="price" placeholder="Enter the price of the campground" min="0.00" step="0.10">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text"  name="image" placeholder="Enter the url of the image of the campground">
                </div>
                
                <div class="form-group">
                    <input class="form-control" type="text"  name="description" placeholder="Enter the description of the campground">
                </div>
                
                <div class="form-group">
                    <button class="btn btn-primary btn-block">Send the new campground</button>
                </div>
                
                
            </form>
            
            <a href="/campgrounds">Go back view all the campgrounds</a>
        </div>
    </div>    
</div>
<% include ../partials/footer %>